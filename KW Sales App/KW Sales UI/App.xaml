<Application x:Class="KW_Sales_UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KW_Sales_UI"
             xmlns:viewModel="clr-namespace:KW_Sales_UI.ViewModels"
             xmlns:view="clr-namespace:KW_Sales_UI.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModel:MainViewModel}">
            <view:MainView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:OrderViewModel}">
            <view:OrderView/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
